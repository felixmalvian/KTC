<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".fragment.AssignMechanicFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfuitext_bold"
        android:text="Fault Report 23"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStatus"
        android:layout_width="110dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle">
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PENDING"
            android:gravity="center"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:weightSum="7">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Reported By:"
                android:layout_weight="1"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                style="@style/TextInputLayout.FilledDisable">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:padding="5dp"
                    android:text="SG37855 - Alex Tan"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:weightSum="7">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Contact No:"
                android:layout_weight="1"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                style="@style/TextInputLayout.FilledDisable">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:padding="5dp"
                    android:text="98765432"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:weightSum="7">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Date &amp; Time:"
                android:layout_weight="1"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                style="@style/TextInputLayout.FilledDisable">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:padding="5dp"
                    android:text="14/11/2022, 2:22PM"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:weightSum="7">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Site Code:"
                android:layout_weight="1"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                app:hintEnabled="false"
                style="@style/TextInputLayout.FilledDisable">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:text="CCCCARC"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:weightSum="7">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Asset ID:"
                android:layout_weight="1"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAssetId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                app:hintEnabled="false"
                style="@style/TextInputLayout.FilledDisable">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:focusable="false"
                    android:clickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:weightSum="7">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Hourmeter:"
                android:layout_weight="1"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                app:hintEnabled="false"
                style="@style/TextInputLayout.FilledDisable">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:padding="5dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:weightSum="7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Uploaded Photos:"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="82dp"
                android:layout_height="60dp"
                android:src="@drawable/sakura"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:layout_width="82dp"
                android:layout_height="60dp"
                android:src="@drawable/sakura"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginEnd="10dp"/>
            <ImageView
                android:layout_width="82dp"
                android:layout_height="60dp"
                android:src="@drawable/sakura"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:weightSum="7">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Working Condition:"
                android:layout_weight="2"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                app:hintEnabled="false"
                style="@style/TextInputLayout.FilledDisable">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:text="Yes"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:weightSum="7">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Accident:"
                android:layout_weight="2"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                app:hintEnabled="false"
                style="@style/TextInputLayout.FilledDisable">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:text="No"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Breakdown Description:"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                style="@style/TextInputLayout.FilledDisable">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:hint="Describe what happened"
                    android:text="Bucket damage"
                    android:inputType="textLongMessage|textMultiLine"
                    android:gravity="start"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakdown Item:"
                android:layout_marginBottom="5dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <Button
                    android:id="@+id/btnCabinGlass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Cabin Glass"
                    android:layout_columnWeight="1"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:backgroundTint="@color/blue_ticked"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false" />

                <Button
                    android:id="@+id/btnBucket"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bucket"
                    android:layout_columnWeight="1"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:backgroundTint="@color/blue_ticked"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false" />

                <Button
                    android:id="@+id/btnEngine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Engine"
                    android:layout_columnWeight="1"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:backgroundTint="@color/blue_ticked"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false" />

                <Button
                    android:id="@+id/btnHydraulicHose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hydraulic Hose"
                    android:layout_columnWeight="1"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:backgroundTint="@color/blue_ticked"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false" />

                <Button
                    android:id="@+id/btnUndercarriage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Undercarriage"
                    android:layout_columnWeight="1"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:backgroundTint="@color/blue_ticked"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false" />

                <Button
                    android:id="@+id/btnMainPump"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Main Pump"
                    android:layout_columnWeight="1"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:backgroundTint="@color/blue_ticked"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false" />

                <Button
                    android:id="@+id/btnBoomArm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Boom/Arm"
                    android:layout_columnWeight="1"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:backgroundTint="@color/blue_ticked"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false" />

                <Button
                    android:id="@+id/btnAttachment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Attachment"
                    android:layout_columnWeight="1"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:backgroundTint="@color/blue_ticked"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false" />

                <Button
                    android:id="@+id/btnOthers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:layout_columnWeight="1"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:backgroundTint="@color/blue_ticked"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:layout_columnWeight="1"
                    android:visibility="invisible"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:backgroundTint="@color/blue_ticked"
                    android:clickable="false"
                    android:focusable="false"
                    android:longClickable="false" />

            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Other Remarks:"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                style="@style/TextInputLayout.FilledDisable">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:text="LCK road LP 191/7 turn left enter by KTC gate A1"
                    android:inputType="textLongMessage|textMultiLine"
                    android:gravity="start"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnReject"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/cancel_red"
                    android:text="Reject"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/btnAssignMechanic"
                    app:layout_constraintTop_toTopOf="parent"/>

                <Button
                    android:id="@+id/btnAssignMechanic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assign"
                    android:layout_marginEnd="10dp"
                    app:icon="@drawable/ic_baseline_person_add_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAssignMechanic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>